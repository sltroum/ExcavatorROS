  <!-- fback_flow.cpp -->
  <node name="fback_flow" pkg="opencv_apps" type="fback_flow" >
    <remap from="image" to="camera1/image_raw/compressed" />
    <param name="use_camera_info" value="$(arg use_camera_info)" />
    <param name="debug_view" value="$(arg debug_view)" />
  </node>

  <!-- Experiment Playback -->
